<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <style>div ul ul {display: none} div ul li:hover > ul {display: block} div div div .header-image {width: 20px}</style>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("应用程序名称", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

                <a class="header-image" href="/Home/Index" title="知书论坛" target="_blank">
                    <img src="/image/header/header.png" style="width:200px" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("首页", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("找书", "Books", "Home")
                        <ul class="nav navbar-btn">
                            <li>@Html.ActionLink("中文书", "Index", "Books")</li>
                            <li>@Html.ActionLink("外文书", "About", "Home")</li>
                            <li>@Html.ActionLink("上传书籍", "Create", "Books")</li>
                        </ul>
                    </li>
                    <li>
                        @Html.ActionLink("文章", "TextList", "Texts")
                        <ul class="nav navbar-btn">
                            <li>@Html.ActionLink("上传文章", "Create", "Texts")</li> 
                        </ul>
                    </li>
                    <li>
                        @Html.ActionLink("网络教程", "TList", "Tutorials")
                        <ul class="nav navbar-btn">
                            <li>@Html.ActionLink("上传教程来源", "Create", "Tutorials")</li>
                        </ul>
                    </li>
                </ul>
                <div class="navbar-right" style="margin-bottom:8px;margin-top:15px">
                    <form action="/Books/SearchResult" method="get">
                        <input type="text" name="kw" size="30" placeholder="输入【书名】or【关键字】查找书籍" autocomplete="off" />
                        <input type="submit" value="搜索" />
                    </form>                   
                </div>
            </div>

        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>知书论坛</div>
        <footer>
            <p id="zhihu">&copy; @DateTime.Now.Year - 不是知乎论坛哦！</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script type="text/javascript">
    document.querySelector('#zhihu').addEventListener('click', EasterEgg, false);
    function EasterEgg() {
        alert("我看你还是想去知乎那儿！");
        window.location.replace("https://www.zhihu.com/")
    }
</script>
